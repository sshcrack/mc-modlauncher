{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "ES2019",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
